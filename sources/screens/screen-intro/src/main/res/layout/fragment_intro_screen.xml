<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/material_content_edge_margin_horizontal"
        android:layout_marginStart="@dimen/material_content_edge_margin_horizontal"
        android:layout_marginTop="@dimen/material_baseline_grid_4x"
        android:contentDescription="@string/a11y_app_logo"
        android:src="@drawable/ic_app_label"
        app:layout_constraintBottom_toTopOf="@+id/greetings_first"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="spread_inside" />

    <TextView
        android:id="@+id/greetings_first"
        style="@style/XTextPrimary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/material_baseline_grid_1x"
        android:layout_marginTop="@dimen/material_baseline_grid_1x"
        android:text="@string/label_greetings1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logo" />


    <TextView
        android:id="@+id/greetings_second"
        style="@style/XTextPrimary"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/material_content_edge_margin_horizontal"
        android:layout_marginStart="@dimen/material_content_edge_margin_horizontal"
        android:gravity="center_horizontal"
        android:text="@string/label_greetings2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/greetings_first" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/intro_exchange_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="@dimen/material_baseline_grid_2x"
        android:layout_marginTop="@dimen/material_baseline_grid_2x"
        android:layout_marginEnd="@dimen/material_content_edge_margin_horizontal"
        android:layout_marginStart="@dimen/material_content_edge_margin_horizontal"
        android:clipToPadding="true"
        app:layout_constraintBottom_toTopOf="@+id/intro_button_download"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/greetings_second" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/intro_button_download"
        style="@style/XTButtonWide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/material_baseline_grid_2x"
        android:layout_marginEnd="@dimen/material_content_edge_margin_horizontal"
        android:layout_marginStart="@dimen/material_content_edge_margin_horizontal"
        android:text="@string/btn_greetings_continue"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>