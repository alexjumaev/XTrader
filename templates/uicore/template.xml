<?xml version="1.0"?>
<template
    name="UI Core module"
    description="Creates a new UI core module."
    format="5"
    revision="5">

    <category value="Modular" />

    <formfactor value="Mobile" />

    <thumbs>
        <thumb>mobile-module.png</thumb>
    </thumbs>

    <parameter
        name="UI core module name"
        constraints="nonempty|module|unique"
        default="uicore"
        id="moduleName"
        type="string" />

    <parameter
        name="Package name"
        constraints="nonempty|package"
        default="com.sedsoftware.uicore"
        help="Path to UI core package module."
        id="uiCorePackageName"
        suggest="com.sedsoftware.uicore"
        type="string" />

    <globals file="globals.xml.ftl" />
    <execute file="recipe.xml.ftl" />

</template>
