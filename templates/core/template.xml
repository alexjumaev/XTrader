<?xml version="1.0"?>
<template name="Core - Main module (Kotlin)" description="Creates a new core module" format="5" revision="5">

    <category value="Modular" />
    <formfactor value="Mobile" />

    <thumbs>
        <thumb>template_new_project.png</thumb>
    </thumbs>

    <parameter name="Core module name" constraints="module|nonempty" default="core" help="Core module name."
        id="coreModuleName" suggest="core" type="string" />

    <parameter name="Core package name" constraints="package|nonempty" default="com.sedsoftware.core"
        help="Path to core module package." id="corePackageName"
        suggest="com.sedsoftware.${coreModuleName}" type="string" />

    <parameter name="Main Application interface" constraints="class|nonempty" default="App" help="The name of the application interface to create."
        id="applicationInterface" suggest="App" type="string" />

    <parameter name="Application provider interface" constraints="class|nonempty" default="AppProvider"
        help="The name of the application provider interface to create." id="applicationProviderInterface"
        suggest="${applicationInterface}Provider" type="string" />

    <globals file="globals.xml.ftl" />
    <execute file="recipe.xml.ftl" />

</template>
