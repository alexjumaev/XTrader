<?xml version="1.0"?>
<template
    format="5"
    revision="5"
    name="Core module (Kotlin)"
    description="Creates a new core module">

    <category value="Modular" />
    <formfactor value="Mobile" />

    <thumbs>
        <thumb>template_new_project.png</thumb>
    </thumbs>

    <parameter
        id="coreModuleName"
        name="Core module name"
        constraints="module|nonempty"
        default="core"
        help="Core module name."
        suggest="core"
        type="string" />

    <parameter
        id="corePackageName"
        name="Core package name"
        constraints="package|nonempty"
        default="com.sedsoftware.core"
        help="Path to core module package."
        suggest="com.sedsoftware.${coreModuleName}"
        type="string" />

    <parameter
        id="applicationInterface"
        name="Main Application interface"
        constraints="class|nonempty"
        default="App"
        help="The name of the application interface to create."
        suggest="App"
        type="string" />

    <parameter
        id="applicationProviderInterface"
        name="Application provider interface"
        constraints="class|nonempty"
        default="AppProvider"
        help="The name of the application provider interface to create."
        suggest="${applicationInterface}Provider"
        type="string" />

    <globals file="globals.xml.ftl" />
    <execute file="recipe.xml.ftl" />

</template>
