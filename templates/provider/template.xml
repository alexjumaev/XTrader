<?xml version="1.0"?>
<template name="Provider module (Kotlin)" description="Creates a new module which provides interface implementations." format="5"
    revision="5">

    <category value="Modular" />
    <formfactor value="Mobile" />

    <thumbs>
        <thumb>template_new_project.png</thumb>
    </thumbs>

    <parameter name="Provider name" constraints="module|nonempty" default="Tools" help="Provider module name."
        id="providerName" suggest="Tools" type="string" />

    <parameter name="Provider module name" constraints="module|nonempty" default="tools" help="Provider module name."
        id="providerModuleName" suggest="${extractLetters(providerName)?lower_case}" type="string" />

    <parameter name="Provider package name" constraints="package|nonempty" default="com.sedsoftware.provider"
        help="Path to provider module package." id="providerPackageName"
        suggest="com.sedsoftware.${extractLetters(providerName)?lower_case}" type="string" />

    <parameter name="Existing Core module name" constraints="module|nonempty" default="core" help="Core module name."
        id="coreModuleName" suggest="core" type="string" />

    <parameter name="Existing Core package name" constraints="package|nonempty" default="com.sedsoftware.core"
        help="Path to core module package." id="corePackageName"
        suggest="com.sedsoftware.${coreModuleName}" type="string" />

    <parameter name="Existing main Application interface name" constraints="class|nonempty" default="App"
        help="Name of the Application interface from core module." id="applicationInterface" suggest="App" type="string" />

    <parameter name="Include sample code?" default="false" help="If true, generates sample code which provides Logger and Settings implementations." id="sample"
        type="boolean" />

    <parameter name="Include Cicerone?" default="false" help="If true, provides Cicerone router and navHolder."
        id="cicerone" type="boolean" />

    <globals file="globals.xml.ftl" />
    <execute file="recipe.xml.ftl" />

</template>
