<?xml version="1.0"?>
<template
    name="Injector module"
    description="Converts main application module to injector module."
    format="5"
    revision="5">

    <category value="Modular" />

    <formfactor value="Mobile" />

    <thumbs>
        <thumb>mobile-module.png</thumb>
    </thumbs>

    <parameter
        name="Main Application interface name"
        constraints="class|nonempty"
        default="App"
        help="Name of the Application interface from core module."
        id="applicationInterface"
        suggest="App"
        type="string" />

    <parameter
        name="Application implementation class name"
        constraints="class|nonempty"
        default="RealApp"
        help="Implements defined Application interface and Application class from Android."
        id="applicationClass"
        suggest="RealApp"
        type="string" />

    <parameter name="Application provider interface name"
        constraints="class|nonempty"
        default="ApplicationProvider"
        help="Name of the ApplicationProvider interface from core module."
        id="applicationProviderInterface"
        suggest="ApplicationProvider"
        type="string" />

    <parameter
        name="Core module name"
        constraints="module|nonempty"
        default="core"
        help="Core module name."
        id="coreModuleName"
        suggest="core"
        type="string" />

    <parameter
        name="Core package name"
        constraints="package|nonempty"
        default="com.sedsoftware.core"
        help="Path to core package module."
        id="corePackageName"
        suggest="com.sedsoftware.core"
        type="string" />

    <globals file="globals.xml.ftl" />
    <execute file="recipe.xml.ftl" />

</template>
